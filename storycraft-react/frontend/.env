# API Configuration
# In development, this will be proxied by Vite to avoid CORS issues
# In production, this will use a relative URL
VITE_API_URL=/api/v1

# Backend URL (used by the proxy in development)
# This should point to your backend server
VITE_BACKEND_URL=http://localhost:8000

# Ollama Configuration
# This should use the Nginx proxy in both development and production
VITE_OLLAMA_URL=/ollama

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_LOGGING=true

# Authentication
VITE_TOKEN_REFRESH_INTERVAL=300000 # 5 minutes

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_NOTIFICATIONS=true