# Example environment configuration for StoryCraft backend
# Copy this file to `.env` and replace placeholder values with real secrets.

# Database settings
POSTGRES_SERVER=db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me
POSTGRES_DB=storycraft
SQLALCHEMY_DATABASE_URI=postgresql://postgres:change_me@db:5432/storycraft

# Security
SECRET_KEY=replace_with_random_secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS origins (comma separated URLs)
BACKEND_CORS_ORIGINS=["http://localhost:3000"]

# Superuser credentials
FIRST_SUPERUSER_EMAIL=admin@example.com
FIRST_SUPERUSER_PASSWORD=change_me
